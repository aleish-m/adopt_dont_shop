<%= form_with url: "/applicants", method: :post, local: true do |form|%>
  <%= form.label :first_name, "First Name"%>
  <%= form.text_field :first_name %>
  <%= form.label :last_name, "Last Name" %>
  <%= form.text_field :last_name %>
  <%= form.label :street_address %>
  <%= form.text_field :street_address %>
  <%= form.label :city %>
  <%= form.text_field :city %>
  <%= form.label :state %>
  <%= form.text_field :state %>
  <%= form.label :zip %>
  <%= form.number_field :zip %>
  <%= form.label :description, "Tell us what makes you a great pet owner:"%>
  <%= form.text_area :description %>
  <%= form.hidden_field :status, value: "In Progress" %>
  <%= form.submit "Submit"%>
<% end %>
