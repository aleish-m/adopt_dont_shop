<%= render partial: 'header' %>

<section>
    <h3>Pets I want to Adopt: </h3>
    <div id="applicant-<%= @applicant.id %>" >
      <% @applicant.pets.each do |pet|%>
        <p>
        <%= link_to "#{pet.name}", "/pets/#{pet.id}"%>
        <% if @app.approved?(@applicant.id, pet.id) == nil %>
          <%= button_to "Approve Adoption for #{pet.name}", "/admin/applicants/#{@applicant.id}", params: {approved: true, pet_id: "#{pet.id}"}, method: :patch %>
          <%= button_to "Reject Adoption for #{pet.name}", "/admin/applicants/#{@applicant.id}", params: {approved: false, pet_id: "#{pet.id}"}, method: :patch %>
        <% elsif @app.approved?(@applicant.id, pet.id) == true %>
          <%= " - Adoption Approved for #{pet.name}" %>
        <% elsif @app.approved?(@applicant.id, pet.id) == false %>
          <%= " - Adoption Rejected for #{pet.name}" %>
        <% end %>
        </p>
      <% end %>
    </div>
</section>
