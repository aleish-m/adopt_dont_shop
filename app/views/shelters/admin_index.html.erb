<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= shelter.name %></h3>
  </div>
<% end %>
  <section>
    <h3>Shelters with Pending Applications</h3>
    <div id="pending-shelters">
    <% @pending_shelters.each do |shelter| %>
        <p><%= shelter.name %></p>
    <% end %>
    </div>
  </section>
